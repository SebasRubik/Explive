<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Menu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondoexplive"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/layout1"
        android:padding="16dp">

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserratb"
            android:text="Â¡Hola! {username}, estos son los conciertos sugeridos para ti:"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/botonperfil"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@id/eventTitle"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/icprfexpl"
            android:scaleType="centerCrop"
            android:contentDescription="Entrada a pagina de perfil" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="wrap_content"
            android:layout_height="590dp"
            android:layout_below="@id/eventTitle"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/todosconciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ver todos los conciertos"
            android:layout_below="@id/listView1"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/montserratsemibold"
            />

    </RelativeLayout>



</FrameLayout>