<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height= "match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondoexplive"
        android:scaleType="centerCrop" ></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RedirectSpotify"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explive"
            android:fontFamily="@font/montserratb"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antes de empezar..."
            android:fontFamily="@font/montserratb"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            >
        </TextView>


        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="Agradecemos que hayas elegido a Explive. Para continuar, necesitamos que inicies sesión con tu cuenta de Spotify, por lo que a continuación te redirigiremos a la página de Spotify."

            android:textSize="18sp"
            >
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Por qué?"
            android:fontFamily="@font/montserratb"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            >
        </TextView>


        <TextView
            android:layout_width="387dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserratsemibold"
            android:text="Con la conexión a Spotify podremos ofrecerte una experiencia sin igual, personalizada y adaptada a tus gustos. Esto lo haremos a través de extraer tus géneros favoritos para las recomendaciones de los conciertos. Además, podrás disfrutar de todas las funcionalidades de Explive."

            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/spotify"
            />



        <!-- Botón para iniciar sesión -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1DB954"
            android:fontFamily="@font/montserratsemibold"
            android:padding="12dp"
            android:text="Inicia sesión en Spotify"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>