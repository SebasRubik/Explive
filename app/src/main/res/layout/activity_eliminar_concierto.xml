<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondoexplive"
        android:scaleType="centerCrop" >
    </ImageView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar concierto"
            android:fontFamily="@font/montserratb"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/lexplive"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona el concierto que deseas eliminar"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAlignment="center"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="@color/purple_Explive"
            android:background="@drawable/edittext_background"/>

        <!-- Nuevo LinearLayout para acomodar los TextViews en dos filas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estos son los detalles del conierto seleccionado:"
                android:textSize="22sp"
                android:fontFamily="@font/montserratsemibold"
                android:textAlignment="center"
                />

            <!-- LinearLayout horizontal para Artista -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:id="@+id/Tartista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artista:"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/artista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- LinearLayout horizontal para Género -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/Tgenero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Género:"
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- LinearLayout horizontal para Ciudad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/TciudadConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciudad: "
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/ciudadConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- LinearLayout horizontal para Lugar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/TlugarConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lugar: "
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/lugarConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- LinearLayout horizontal para Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/TfechaConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha: "
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/fechaConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- LinearLayout horizontal para Hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/ThoraConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora: "
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/purple_Explive"/>

                <TextView
                    android:id="@+id/horaConcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/montserratsemibold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/eliminar"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Eliminar concierto"
            android:layout_marginTop="40dp"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/montserratsemibold"
            android:layout_gravity="center"
            android:backgroundTint="#FF0000"/>

    </LinearLayout>
</FrameLayout>