<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width= "match_parent"
    android:layout_height= "match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondoexplive"
        android:scaleType="centerCrop" ></ImageView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Evento"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/montserratb"
            />

        <TextView
            android:id="@+id/textView6"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido administrador a la pantalla de crear nuevo evento."
            android:textSize="18sp"
            android:fontFamily="@font/montserratsemibold"
            />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Artista"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editTextGenero"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="GÃ©nero"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="Ciudad"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="Centro de eventos"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="Fecha"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp" />


        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:hint="Hora"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/purple_Explive"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="Imagen del Artista" />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Seleccionar Imagen"
            android:layout_gravity="center"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnAgregar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Agregar Evento"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/buttonbackground"
            />

    </LinearLayout>

</FrameLayout>